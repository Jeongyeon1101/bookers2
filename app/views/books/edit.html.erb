<h2>Editing Book</h2>
<div>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to book_path(@book) do %>
  <p>Show</p>
<% end %>
<%= link_to books_path do %>
  <p>Back</p>
<% end %>
</div>
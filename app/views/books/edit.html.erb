<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div>
<%= form_with model: @book do |f| %>
  <p>本のタイトル</p>
  <%= f.text_field :title %>
  <p>感想</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to book_path(@book) do %>
  <p>Show</p>
<% end %>
<%= link_to books_path do %>
  <p>Back</p>
<% end %>
</div>
<% if @book_list.errors.any? %>
  <h3><%= @book_list.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book_list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h2>Books</h2>
<% @books.each do |book| %>
  <div>
    <%= link_to user_path(@user) do %>
      <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    <% end %>
    <%= link_to book_path(book.id) do %>
      <p>本のタイトル:<%= book.title %></p>
    <% end %>
    <p>感想:<%= book.body %></p>
  </div>
<% end %>

<%= render 'users/list', user: @user %>
<%= render 'list', book: @book_list %>
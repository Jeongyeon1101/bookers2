<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p><%= @user.name %></p>
  <p><%= @user.introduction %></p>
</div>

<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <%= link_to books_path(book.id) do %>
    <p>Title<%= book.title %></p>
  <% end %>
  <p>Opinion<%= book.body %></p>
</div>
<% end %>
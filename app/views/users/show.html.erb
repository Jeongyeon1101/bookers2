<%= flash[:notice] %>
<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <%= link_to book_path(book.id) do %>
    <p>Title:<%= book.title %></p>
  <% end %>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>

<%= render 'list', user: @user %>
<%= render 'books/list', book: @book %>
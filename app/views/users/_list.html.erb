<h2>User info</h2>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <p>Name:<%= user.name %></p>
  <p>Introduction:<%= user.introduction %></p>
  <% if user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>
  <% else %>
    <p><%= link_to "プロフィール編集", user_path(current_user) %></p>
  <% end %>
</div>

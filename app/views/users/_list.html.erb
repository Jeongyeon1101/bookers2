<h2>User info</h2>
<table class='table'>
  <tr>
    <%= image_tag user.get_profile_image(100,100) %>
  </tr>
  <tr>
    <th>name</th>
    <th><p><%= user.name %></p></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><p><%= user.introduction %></p></th>
  </tr>
</table>

<div class='row'>
  <% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_path(user.id)" do %>
    <i class="fa-solid fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= link_to user_path(user), class: "btn btn-outline-secondary btn-block user_path(current_user)" do %>
    <i class="fa-solid fa-user-cog"></i>
    <% end %>
  <% end %>
</div>
